{
	"glm":
	{
		"type":"headers",

		"platforms":
		[
			"linux_x64",
			"win32_x64"
		],

		"common":
		{
			"defines":
			{
				"base": ["GLM_ENABLE_EXPERIMENTAL"]
			},

			"optional":false,

			"code":"glm_test.cpp"
		}
	},
	"pthread":
	{
		"type":"lib",

		"platforms":
		[
			"linux_x64",
			"win32_x64"
		],

		"common":
		{
			"shlib_link":["pthread"],

			"optional":false,

			"code":"pthread_test.cpp"
		},
		"windows_x86-64_msvc":
		{
			"no_common":true
		}
	},
	"dl":
	{
		"type":"flags",

		"platforms":
		[
			"linux_x64"
		],

		"common":
		{
			"ld_flags":["-ldl"]
		}
	},
	"X11":
	{
		"type":"lib",

		"platforms":
		[
			"linux_x64"
		],

		"common":
		{
			"shlib_link":["X11"],

			"optional":false,

			"code":"skeleton.cpp"
		}
	},
	"OpenGL":
	{
		"type":"lib",

		"platforms":
		[
			"linux_x64",
			"win32_x64"
		],

		"common":
		{
			"shared":true,
			"optional":true,

			"shlib_link":["GL"],

			"code":"opengl_test.cpp"
		},
		"win32_x64":
		{
			"shared":true,

			"shlib_link":["opengl32"]
		}
    },
	"glfw-3":
	{
		"type":"lib",

		"platforms":
		[
			"linux_x64",
			"win32_x64"
		],

		"common":
		{
			"shared":true,

			"defines":
			{
				"base":["GLFW_INCLUDE_NONE", "ENABLE_GLFW"]
			},

			"shlib_link":["glfw"],

			"use":["pthread", "dl", "X11", "OpenGL"],

			"optional":true,

			"code":"glfw_test.cpp"
		},
		"win32_x64":
		{
			"shlib_link":["glfw3"]
		},
		"windows_x86-64_msvc":
		{
			"shlib_link":["glfw3dll"]
		}
	},
	"EASTLBuildFlags":
	{
		"type":"flags",

		"platforms":
		[
			"linux_x64",
			"win32_x64"
		],

		"common":
		{
			"cxx_flags":
			[
				"-Wno-pedantic",
				"-Wno-unknown-pragmas",
				"-Wno-error"
			]
		},
		"windows_x86-64_msvc":
		{
			"no_common":true
		}
	},
	"EAStdCBuildFlags":
	{
		"type":"flags",

		"platforms":
		[
			"linux_x64",
			"win32_x64"
		],

		"common":
		{
			"cxx_flags":
			[
				"-Wno-pedantic"
			]
		},
		"windows_x86-64_msvc":
		{
			"no_common":true
		}
	},
	"EASTLFlags":
	{
		"type":"flags",

		"platforms":
		[
			"linux_x64",
			"win32_x64"
		],

		"common":
		{
			"includes":
			[
				"./ThirdParty/EASTL/include",
				"./ThirdParty/EASTL/test/packages/EABase/include/Common"
			]
		}
	},
	"STBFlags":
	{
		"type":"flags",

		"platforms":
		[
			"linux_x64",
			"win32_x64"
		],

		"common":
		{
			"cc_flags":
			[
				"-Wno-unused-parameter",
				"-Wno-disabled-macro-expansion",
				"-Wno-sign-conversion",
				"-Wno-comma",
				"-Wno-double-promotion",
				"-Wno-cast-align",
				"-Wno-cast-qual",
				"-Wno-extra-semi-stmt",
				"-Wno-missing-prototypes",
				"-Wno-missing-variable-declarations",
				"-Wno-padded",
				"-Wno-implicit-int-conversion",
				"-Wno-conversion"
			]
		},
		"linux_x64":
		{
			"cc_flags":
			[
				"-fPIC"
			],
			"ld_flags":
			[
				"-fPIC"
			]
		},
		"windows_x86-64_msvc":
		{
			"no_common":true,

			"cc_flags":
			[
				"/wd4100",
				"/wd4204"
			]
		}
	},
	"tinyobjloaderFlags":
